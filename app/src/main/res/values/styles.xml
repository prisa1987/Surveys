<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SurveysTWTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SurveysTWTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SurveysTWTextAppearance.SubTitle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SurveysTWTextAppearance.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SurveysTWTextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="SurveysTWTextAppearance.HeadLine">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SurveysTWTextAppearance.Thin">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
